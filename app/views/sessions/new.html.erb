<%= provide(:title, 'LogIn') %>
<div class="col-md-12">
  <div class="col-md-4 col-md-offset-4">
    <div class="well">
      <%= render '/shared/title', title: 'Log In' %>
      <%= form_tag '/login' do |f| %>
      <div class="form-group">
        <%= label_tag :name %>
        <br>
        <%= text_field_tag :name, params[:name], class: "form-control", placeholder: "At least 3 digit..." %>
      </div>
      <div class="form-group">
        <%= label_tag :password %>
        <br>
        <%= password_field_tag :password, params[:password], class: "form-control", placeholder: "At least 5 digit..." %>
      </div>
      <hr>
      <%= submit_tag "Login", class: "btn btn-success" %>
      <% end %>
    </div>
  </div>
</div>