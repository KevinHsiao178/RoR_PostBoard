<%= provide(:title, 'Post') %>

<div class="row">
	<div class="col-md-6 col-md-offset-1">
		<%= render 'shared/title', title: "#{@article.title}" %>
		<p><%= @article.text %></p>
		<br>
		<div class="text-right">
			<small>posted by</small>
			<strong><%= @article.user.name %></strong>
			<small><%= time_ago_in_words(@article.created_at) << " ago" %></small>
		</div>
		<% if logged_in? %>
			<%= link_to 'Edit', edit_article_path(@article), class: "btn btn-warning" %>
		<% end %>
		<%= link_to 'Back to Home', articles_path, class: "btn btn-primary"%>
		<hr>

		<div class="row">
		  <div class="col-md-offset-1">
				<% if @article.comments.any? %>
					<%= render 'shared/title', title: "All Comments:" %>
					<%# @article.comments.each do |comment| %>
					<%= render @article.comments %>
				<% end %>
				<hr>
			</div>
		</div>

		<div class="row">
		  <div class="col-md-offset-1">
				<% if logged_in? %>
					<%= render 'shared/title', title: "Leave Comments:" %>
					<%= render 'comments/form' %>
				<% end %>
			</div>
		</div>
			
	</div>
</div>



	




	